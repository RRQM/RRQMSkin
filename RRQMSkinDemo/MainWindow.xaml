<windows:RRQMWindow
    x:Class="RRQMSkinDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RRQMSkinDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:windows="RRQM_Windows" xmlns:rrqmPrimitives="RRQM_Primitives" xmlns:rrqmControls="RRQM_Controls"
    Title="MainWindow"
    Width="800"
    Height="450"
    CornerRadius="5"
    mc:Ignorable="d">
    <Canvas>
        <rrqmPrimitives:Sector RoundStyle="Both"  Width="100" Height="100" Fill="Red" MaxRadiusRatio="1" MinRadiusRatio="0.8" StartAngle="0" EndAngle="180"/>
        <rrqmControls:Loading Width="100" Name="loading" Height="100" Canvas.Left="105" Duration="0:0:1"/>
        <rrqmPrimitives:Dial Width="100" Height="100" StartAngle="0" MinRadiusRatio="0" MaxRadiusRatio="1" TickAngle="30" TickCount="12" StrokeThickness="2" Stroke="Black" Canvas.Left="210"/>
    </Canvas>
</windows:RRQMWindow>
