<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:charts="RRQM_Charts"
                    xmlns:primitives="RRQM_Primitives">
    <Style TargetType="{x:Type charts:PieChartItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type charts:PieChartItem}">
                    <Viewbox>
                        <Grid Width="300" Height="300">
                            <primitives:Sector x:Name="sector" Fill="{TemplateBinding Foreground}" MaxRadiusRatio="1" MinRadiusRatio="0.5" />
                            <primitives:DialText x:Name="dialText" FontSize="{TemplateBinding FontSize}" Foreground="Black" RadiusRatio="0.8" Text="{TemplateBinding Text}" />
                        </Grid>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>