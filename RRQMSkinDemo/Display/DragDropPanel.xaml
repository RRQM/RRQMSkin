<Border x:Class="RRQMSkinDemo.Display.DragDropPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:RRQMSkinDemo.Display"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rrqmskin="RRQM_RRQMSkin"
        d:DesignHeight="450"
        d:DesignWidth="800"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBox_1" Background="Transparent" BorderThickness="2" PreviewMouseMove="ListBox_PreviewMouseMove"
                 QueryContinueDrag="ListBox_QueryContinueDrag" SelectionMode="Multiple" />
        <ListBox x:Name="listBox_2" Grid.Column="1" AllowDrop="True" Background="Transparent" BorderThickness="2"
                 Drop="ListBox2_Drop" SelectionMode="Multiple" />
    </Grid>
</Border>